<%= form_for @changeset, @action, [class: "form-inline"], fn f -> %>
  <div class="form-group">
    <%= text_input f, :username, [class: "form-control", placeholder: "Username"] %>
  </div>

  <div class="form-group">
    <%= text_input f, :content, [class: "form-control", placeholder: "Content"] %>
  </div>

  <div class="form-group">
    <%= submit "Send", [class: "btn btn-primary"] %>
  </div>
<% end %>
